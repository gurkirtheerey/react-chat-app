{
  "include": ["src/**/*.ts" /* Include every ts file in source folder */],
  "exclude": ["node_modules" /* exclude everything in  node_modules */],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "compileOnSave": true,
  "lib": ["es2015"]
}
